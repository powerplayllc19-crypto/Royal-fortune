        function setDepositAmount(amount) {
            document.getElementById('depositAmount').value = amount;
        }

        async function processDeposit() {
            const amount = parseFloat(document.getElementById('depositAmount').value);
            const cardNumber = document.getElementById('cardNumber').value;
            const cardExpiry = document.getElementById('cardExpiry').value;
            const cardCvc = document.getElementById('cardCvc').value;
            
            if (!amount || amount < 10) {
                showNotification('Minimum deposit is $10', 'error');
                return;
            }
            
            if (!cardNumber || !cardExpiry || !cardCvc) {
                showNotification('Please fill all card details', 'error');
                return;
            }
            
            // Simulate Stripe payment (replace with actual Stripe implementation)
            showNotification('Processing payment...', 'info');
            
            // In production, you would create a Payment Intent on your server
            // and use stripe.confirmCardPayment()
            
            setTimeout(() => {
                // Apply first deposit bonus
                const bonus = amount >= 500 ? 500 : amount;
                updateBalance(amount + bonus);
                
                closeModal('deposit');
                showNotification(`Deposit of $${amount.toFixed(2)} successful! Bonus: $${bonus.toFixed(2)}`, 'success');
                createConfetti();
            }, 2000);
        }

        function processWithdrawal() {
            const amount = parseFloat(document.getElementById('withdrawAmount').value);
            
            if (!amount || amount < 50) {
                showNotification('Minimum withdrawal is $50', 'error');
                return;
            }
            
            if (amount > gameState.balance) {
                showNotification('Insufficient balance', 'error');
                return;
            }
            
            updateBalance(-amount);
            closeModal('withdraw');
            showNotification(`Withdrawal of $${amount.toFixed(2)} initiated!`, 'success');
        }

        // ==================== DAILY BONUS ====================
        function claimDailyBonus() {
            const today = new Date().toDateString();
            
            if (gameState.lastClaim === today) {
                showNotification('Already claimed today! Come back tomorrow.', 'info');
                return;
            }
            
            gameState.dailyStreak = gameState.lastClaim === new Date(Date.now() - 86400000).toDateString() 
                ? Math.min(7, gameState.dailyStreak + 1) 
                : 1;
            
            const bonus = 500 * gameState.dailyStreak;
            updateBalance(bonus);
            gameState.lastClaim = today;
            
            showNotification(`Day ${gameState.dailyStreak} bonus: $${bonus}!`, 'success');
            createConfetti();
            saveState();
        }

        // ==================== JACKPOT ANIMATION ====================
        function updateJackpot() {
            const jackpotEl = document.getElementById('jackpot');
            const current = parseFloat(jackpotEl.textContent.replace(/[$,]/g, ''));
            const newAmount = current + Math.random() * 0.5;
            jackpotEl.textContent = '$' + newAmount.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
        }

        setInterval(updateJackpot, 3000);

        // ==================== DOWNLOAD / PWA HELPERS ====================
        let deferredPrompt = null;

        window.addEventListener('beforeinstallprompt', (e) => {
            // Prevent Chrome 67 and earlier from automatically showing the prompt
            e.preventDefault();
            deferredPrompt = e;
            console.log('PWA install prompt captured');
        });

        async function downloadApp() {
            // If running as a PWA-capable site, show install prompt
            if (deferredPrompt) {
                deferredPrompt.prompt();
                const choiceResult = await deferredPrompt.userChoice;
                if (choiceResult.outcome === 'accepted') {
                    showNotification('App install started. Check your home screen!', 'success');
                } else {
                    showNotification('Install dismissed. You can try again anytime.', 'info');
                }
                deferredPrompt = null;
                return;
            }

            // Fallback: download index.html so users can save or self-host
            try {
                const html = document.documentElement.outerHTML;
                const blob = new Blob([html], { type: 'text/html' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = 'royal-fortune-casino.html';
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
                URL.revokeObjectURL(url);
                showNotification('Download started: royal-fortune-casino.html', 'success');
            } catch (err) {
                console.error(err);
                showNotification('Unable to download right now. Please try again.', 'error');
            }
        }

        // ==================== INITIALIZE ====================
        function init() {
            // Update balance display
            document.getElementById('balance').textContent = gameState.balance.toFixed(2);
            document.getElementById('withdrawBalance').textContent = '$' + gameState.balance.toFixed(2);
            
            // Initialize games
            createFortuneWheel();
            newBingoCard();
            
            // Reset streak if new day
            if (gameState.lastLogin !== new Date().toDateString()) {
                gameState.lastLogin = new Date().toDateString();
                saveState();
            }
            
            updateVipUI();
            updateAuthUI();
            
            // Format card number input
            document.getElementById('cardNumber').addEventListener('input', function(e) {
                let value = e.target.value.replace(/\s/g, '').replace(/\D/g, '');
                let formatted = value.match(/.{1,4}/g)?.join(' ') || value;
                e.target.value = formatted;
            });
            
            // Format expiry input
            document.getElementById('cardExpiry').addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                if (value.length >= 2) {
                    value = value.slice(0, 2) + '/' + value.slice(2);
                }
                e.target.value = value;
            });
            
            console.log('üé∞ Royal Fortune Casino initialized!');
            console.log('üìä House Edge Configured:');
            console.log('   Slots: 3.5% (RTP 96.5%)');
            console.log('   Blackjack: 0.5% (RTP 99.5%)');
            console.log('   Roulette: 2.7% (RTP 97.3%)');
            console.log('   Video Poker: 0.46% (RTP 99.54%)');
            console.log('   Bingo: 10-15% (RTP 85-90%)');
        }

        init();
    </script>
